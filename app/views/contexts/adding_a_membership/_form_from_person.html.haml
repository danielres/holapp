- membership ||= Membership.new

= simple_form_for membership, url: '/memberships', html: { method: :post } do |f|
  = f.association :project, label: 'Member of', collection: projects if local_assigns[:person]
  = f.hidden_field :user_id, value: person.id if local_assigns[:person]
  = f.hidden_field :project_id, value: project.id if local_assigns[:project]
  = f.button :button, 'Create membership'

