%tr[tagging]

  - unless viewed_from == :tag
    %td.name
      = link_to(tagging.tag.name, tagging.tag)

  - unless viewed_from == :taggable
    %td.name
      = link_to(tagging.taggable.name, tagging.taggable)

  %td.description
    = best_in_place tagging, :description,
            type: :textarea,
             nil: 'â€¦'

  %td.quantifier
    = best_in_place tagging, :quantifier,
      collection: quantifier_values,
            type: :select
